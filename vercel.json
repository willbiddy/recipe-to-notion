{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "bun run build:web && bun run build:api",
	"outputDirectory": ".",
	"cleanUrls": true,
	"trailingSlash": false,
	"rewrites": [
		{
			"source": "/",
			"destination": "/api/dist/index"
		},
		{
			"source": "/favicon.ico",
			"destination": "/api/dist/assets?path=/favicon.ico"
		},
		{
			"source": "/favicon.png",
			"destination": "/api/dist/assets?path=/favicon.png"
		},
		{
			"source": "/favicon-16x16.png",
			"destination": "/api/dist/assets?path=/favicon-16x16.png"
		},
		{
			"source": "/favicon-32x32.png",
			"destination": "/api/dist/assets?path=/favicon-32x32.png"
		},
		{
			"source": "/favicon-white.png",
			"destination": "/api/dist/assets?path=/favicon-white.png"
		},
		{
			"source": "/favicon-16x16-white.png",
			"destination": "/api/dist/assets?path=/favicon-16x16-white.png"
		},
		{
			"source": "/favicon-32x32-white.png",
			"destination": "/api/dist/assets?path=/favicon-32x32-white.png"
		},
		{
			"source": "/apple-touch-icon.png",
			"destination": "/api/dist/assets?path=/apple-touch-icon.png"
		},
		{
			"source": "/fork-and-knife.png",
			"destination": "/api/dist/assets?path=/fork-and-knife.png"
		},
		{
			"source": "/manifest.json",
			"destination": "/api/dist/assets?path=/manifest.json"
		},
		{
			"source": "/web.css",
			"destination": "/api/dist/assets?path=/web.css"
		},
		{
			"source": "/web.js",
			"destination": "/api/dist/assets?path=/web.js"
		},
		{
			"source": "/shared/api.js",
			"destination": "/api/dist/assets?path=/shared/api.js"
		},
		{
			"source": "/shared/storage.js",
			"destination": "/api/dist/assets?path=/shared/storage.js"
		}
	],
	"functions": {
		"api/scrape.py": {
			"maxDuration": 60
		}
	}
}
