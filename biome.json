{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"style": {
				"noNegationElse": "off",
				"useCollapsedElseIf": "off",
				"useThrowOnlyError": "error"
			},
			"complexity": {
				"noExcessiveCognitiveComplexity": "off",
				"noUselessStringConcat": "error",
				"noUselessUndefinedInitialization": "error",
				"useDateNow": "error"
			},
			"nursery": {
				"useMaxParams": {
					"level": "error",
					"options": {
						"max": 3
					}
				}
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noBarrelFile": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noEvolvingTypes": "error",
				"useAwait": "error",
				"noUnknownAtRules": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
