{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"types": ["chrome"],
		"outDir": ".",
		"rootDir": "."
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "*.js", "*.js.map"]
}
