{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"lib": ["ES2020", "DOM"],
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"outDir": ".",
		"rootDir": "."
	},
	"include": ["*.ts", "*.tsx", "shared/**/*.ts", "shared/**/*.tsx"],
	"exclude": ["node_modules", "*.js", "*.js.map"]
}
