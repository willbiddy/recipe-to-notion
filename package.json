{
  "name": "recipe-to-notion",
  "version": "1.0.0",
  "description": "CLI tool that scrapes recipe URLs, generates AI scores/tags with Claude, and saves to Notion",
  "type": "module",
  "bin": {
    "recipe-to-notion": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun src/cli.ts",
    "build": "bun build src/cli.ts --compile --outfile recipe-to-notion",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/"
  },
  "keywords": ["recipe", "notion", "claude", "cli"],
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@notionhq/client": "^5.8.0",
    "cheerio": "^1.2.0",
    "citty": "^0.2.0",
    "consola": "^3.4.2",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  }
}
