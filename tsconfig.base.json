{
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["./shared/*"],
			"@backend/*": ["./backend/*"],
			"@api/*": ["./api/*"]
		}
	}
}
