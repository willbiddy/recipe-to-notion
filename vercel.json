{
	"$schema": "https://openapi.vercel.sh/vercel.json",
	"buildCommand": "bun run build:web",
	"outputDirectory": "dist",
	"cleanUrls": true,
	"trailingSlash": false,
	"rewrites": [
		{
			"source": "/",
			"destination": "/api/index"
		},
		{
			"source": "/favicon\\.ico",
			"destination": "/api/assets?path=/favicon.ico"
		},
		{
			"source": "/favicon(-:size)?(\\.png)?",
			"destination": "/api/assets?path=/favicon:size.png"
		},
		{
			"source": "/favicon(-:size)?-white(\\.png)?",
			"destination": "/api/assets?path=/favicon:size-white.png"
		},
		{
			"source": "/apple-touch-icon(\\.png)?",
			"destination": "/api/assets?path=/apple-touch-icon.png"
		},
		{
			"source": "/fork-and-knife(\\.png)?",
			"destination": "/api/assets?path=/fork-and-knife.png"
		},
		{
			"source": "/manifest\\.json",
			"destination": "/api/assets?path=/manifest.json"
		},
		{
			"source": "/web\\.css",
			"destination": "/api/assets?path=/web.css"
		},
		{
			"source": "/web\\.js",
			"destination": "/api/assets?path=/web.js"
		},
		{
			"source": "/shared/(.*)",
			"destination": "/api/assets?path=/shared/$1"
		},
		{
			"source": "/api/(.*)",
			"destination": "/api/assets?path=/$1"
		}
	],
	"functions": {
		"api/**/*.ts": {
			"maxDuration": 60
		},
		"api/scrape.py": {
			"maxDuration": 60
		}
	}
}
