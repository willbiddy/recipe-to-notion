{
	"name": "recipe-to-notion",
	"version": "1.0.0",
	"description": "CLI tool that scrapes recipe URLs, generates AI scores/tags with Claude, and saves to Notion",
	"type": "module",
	"bin": {
		"recipe-to-notion": "./src/cli.ts"
	},
	"scripts": {
		"start": "bun src/cli.ts",
		"server": "bun src/cli-server.ts",
		"build": "bun build src/cli.ts --compile --outfile recipe-to-notion",
		"build:extension": "bun scripts/build-extension.ts && bunx tailwindcss -i extension/input.css -o extension/styles.css --minify",
		"build:web": "bun scripts/build-web.ts && bunx tailwindcss -i public/input.css -o public/web.css --minify",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"keywords": [
		"recipe",
		"notion",
		"claude",
		"cli"
	],
	"license": "MIT",
	"private": true,
	"browserslist": [
		"defaults",
		"not IE 11"
	],
	"devDependencies": {
		"@babel/core": "^7.28.6",
		"@babel/preset-typescript": "^7.28.5",
		"@biomejs/biome": "^2.3.12",
		"@dschz/bun-plugin-solid": "^1.0.4",
		"@resvg/resvg-js": "^2.6.2",
		"@types/bun": "latest",
		"@types/chrome": "^0.1.36",
		"babel-preset-solid": "^1.9.10",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"sharp": "^0.34.5",
		"tailwindcss": "3",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.71.2",
		"@notionhq/client": "^5.8.0",
		"baseline-browser-mapping": "^2.9.18",
		"caniuse-lite": "^1.0.30001766",
		"cheerio": "^1.2.0",
		"citty": "^0.2.0",
		"consola": "^3.4.2",
		"get-port": "^7.1.0",
		"nanoid": "^5.1.6",
		"solid-js": "^1.9.11",
		"zod": "^4.3.6"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"biome check --write",
			"biome format --write"
		],
		"*.{json,md,css}": [
			"biome format --write --no-errors-on-unmatched"
		]
	}
}
